<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ProgressBar
        android:id="@+id/progressBarEmployee"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:visibility="gone" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/progressBarEmployee">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/employeeIV"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="@dimen/signUpLeftRightMargin"
                app:srcCompat="@drawable/ic_launcher_background" />

            <TextView
                android:id="@+id/employeeTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="@dimen/signUpLeftRightMargin"
                android:layout_marginRight="@dimen/signUpLeftRightMargin"
                android:textAlignment="textStart"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/employeeDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginLeft="@dimen/signUpLeftRightMargin"
                android:layout_marginRight="@dimen/signUpLeftRightMargin"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="0dp"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>